!!!
%html{:lang => "en"}
  %head

    %link{:rel => "shortcut icon", :type => "image/x-icon", 
          :href => "/favicon.png", :sizes => "16x16"}
            
    %link{:rel => "icon", :type => "image/x-icon", 
          :href => "/favicon.png", :sizes => "16x16"}

    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Luna To Do
    / Bootstrap core CSS
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    .container
      .header
        %ul.nav.nav-pills.pull-right
          %li
            %a{:href => "/lists"} Listas
          %li.active
            %a.open-overlay{:href => "/lists/new", 'data-overlay' => 'list'} Nova Lista
        %h3.text-muted Luna To Do
        .wrap-alert.pull-right
          .alert.alert-success.hidden{role: 'alert'}
            = t('list.saved')
      #page-content.well
        = yield
      .footer
        %p Â© Lab Luna 2014

    #list.modal.fade{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}

  = javascript_include_tag "application"
  = yield(:javascripts)

