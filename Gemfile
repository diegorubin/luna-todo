source 'https://rubygems.org'

# Core
gem 'rails', '4.0.2'
gem 'mysql2'
gem 'devise'
gem 'oauth2'
gem 'luna', :git => 'ssh://git@github.com/diegorubin/luna-key.git'

# database
gem 'sqlite3'
gem 'mongoid', '~> 4.0.0.rc2'
gem 'mongo'
gem 'redis'

# Front-end
gem 'haml'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 1.2'

group :development do
  gem 'guard'
  gem 'guard-rspec'

  gem 'thin'
  gem 'capistrano'
  gem 'rspec-rails', '~> 2.0'
  gem 'simplecov', '0.7.1'
  gem 'simplecov-rcov'

  gem 'factory_girl_rails'
  gem 'pry'
  gem 'pry-rails'
  gem 'quiet_assets'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

