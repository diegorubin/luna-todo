gem 'devise'
gem 'riak-client'
gem 'oauth'

# Front-end
gem 'haml'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 1.2'

group :development do
  gem 'thin'
  gem 'capistrano'
  gem 'debugger'
  gem 'rspec-rails', '~> 2.0'
  gem 'simplecov', '0.7.1'
  gem 'simplecov-rcov'
  gem 'autotest'
  gem 'autotest-fsevent'
  gem 'factory_girl_rails'
  gem 'pry'
  gem 'pry-rails'
  gem 'quiet_assets'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

